<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simply More Melee (Continued)</li>
        </mods>

        <li Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">

                    <xpath>/Defs/ThingDef[defName="SMM_Mallet"]/equippedStatOffsets</xpath>
                    <value>
                        <ConstructionSpeed>0.2</ConstructionSpeed>
                        <SculptingSpeed>0.3</SculptingSpeed>
                        <StonecuttingSpeed>0.3</StonecuttingSpeed>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="SMM_Mallet"]/description</xpath>
                    <value>
                        <description>A small hammer with a large blunt head. Ineffective as a weapon, but great for shaping various objects.</description>
                    </value>
                </li>
            </operations>
        </li>
    </Operation>
</Patch>